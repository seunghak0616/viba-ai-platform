# 환경 변수 예시 파일
# 이 파일을 복사하여 .env.local 파일을 생성하세요

# 데이터베이스 설정
DATABASE_URL=postgresql://bim_user:bim_password@localhost:5432/bim_platform
REDIS_URL=redis://localhost:6379

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Gemini AI API 설정
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_K=40
GEMINI_TOP_P=0.95
GEMINI_SAFETY_LEVEL=BLOCK_MEDIUM_AND_ABOVE

# 서버 설정
NODE_ENV=development
PORT=5000
NLP_ENGINE_PORT=8000
FRONTEND_PORT=3000

# 외부 서비스 설정
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# 파일 업로드 설정
MAX_FILE_SIZE=500MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=ifc,dwg,dxf,pdf

# 보안 설정
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 로그 설정
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 모니터링 설정
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-key-here

# 프로덕션 설정
DOMAIN=bim-platform.com
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem